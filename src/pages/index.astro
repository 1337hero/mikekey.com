---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { Icon } from "astro-icon/components";
import HeroImg from "../assets/images/hero.png";
import { getCollection, render, type CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = await getCollection("blog");
const notes = await getCollection("notes");

const noteEntries = await Promise.all(
  notes.map(async (note) => {
    const { Content } = await render(note as CollectionEntry<'notes'>);
    return { ...note, Content };
  })
);

type TimelineItem =
  | { type: 'post'; date: Date; item: CollectionEntry<'blog'> }
  | { type: 'note'; date: Date; item: (typeof noteEntries)[number] };

const timeline: TimelineItem[] = [
  ...posts.map((p) => ({ type: 'post', date: p.data.updatedDate ?? p.data.date, item: p })),
  ...noteEntries.map((n) => ({ type: 'note', date: n.data.updatedDate ?? n.data.date, item: n })),
]
  .sort((a, b) => b.date.valueOf() - a.date.valueOf())
  .slice(0, 6);

const noteAnchor = (id: string) => `home-note-${id.replace(/\//g, '-')}`;
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Hero
    title="Just Mike Key."
    subtitle="Husband. Father. Builder."
    description="This site is my notebook — part essays, part experiments, part reminders to myself."
    alignment="center"
    backgroundImage={HeroImg.src}
  />

  <section class="py-20">
    <div class="container-content">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="font-display font-bold text-step-3 mb-2">
            Latest on the blog
          </h2>
          <p class="text-2xl">
            Thoughts on business, life, and everything in between
          </p>
        </div>
        <a
          href="/blog"
          class="hidden md:flex items-center hover:underline text-2xl font-medium group"
        >
          View all posts
          <svg
            class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          timeline.map((entry) => (
            entry.type === 'post' ? (
              <article class="group bg-gray-200 dark:bg-gray-500 overflow-hidden">
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-3">
                    <time class="text-lg">
                      <FormattedDate date={entry.item.data.date} />
                    </time>
                  </div>

                  <h3 class="font-display font-bold text-step-1 mb-2 line-clamp-2">
                    <a href={`/blog/${entry.item.id}`} class="hover:underline">
                      {entry.item.data.title}
                    </a>
                  </h3>

                  {entry.item.data.description && (
                    <p class="line-clamp-3 mb-4">
                      {entry.item.data.description}
                    </p>
                  )}

                  <a
                    href={`/blog/${entry.item.id}`}
                    class="inline-flex items-center text-2xl font-medium hover:underline group/link"
                  >
                    Read more
                    <svg
                      class="w-5 h-5 ml-1 transform group-hover/link:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </a>
                </div>
              </article>
            ) : (
              <article id={noteAnchor(entry.item.id)} class="bg-gray-100 dark:bg-gray-700 rounded-md p-6 border border-gray-200 dark:border-gray-600">
                <div class="flex items-center justify-between mb-2">
                  <span class="inline-block text-lg font-bold tracking-wide bg-bright-sun text-gray-900 rounded px-2 py-1">Quick note</span>
                  <time class="text-lg"><FormattedDate date={entry.item.data.date} /></time>
                </div>
                <div class="prose dark:prose-invert max-w-none">
                  <entry.item.Content />
                </div>
              </article>
            )
          ))
        }
      </div>

      <div class="mt-12 text-center md:hidden">
        <a href="/blog" class="inline-flex items-center hover:underline font-medium group">
          View all posts
          <svg
            class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="container-content">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display font-bold text-step-3 mb-6">
          A bit about myself
        </h2>
        <p class="leading-standard mb-8">
          This site is my little corner of the internet — a place where I've
          been writing, tinkering, and experimenting for years. It's gone
          through a few lives already: from WordPress in the early blogging
          days, to Jekyll for that developer control, and now Astro where I'm
          bringing old content back to life and mixing it with new ideas.
        </p>
        <p class="leading-standard">
          I think of mk3y.com as both a personal journal and a public lab
          notebook — a place to explore ideas, share lessons learned, and
          occasionally break things in public.
        </p>
      </div>
    </div>
  </section>
  <section class="py-20">
    <div class="container-content">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display font-bold text-step-3 mb-6 uppercase">
          Me around the web
        </h2>
        <p class="leading-standard mb-8">
          You can find me across a few other digital neighborhoods. Feel free to
          connect, share, or just explore.
        </p>
        <div class="flex flex-col justify-center space-x-6">
          <span>
            <Icon name="fa7-brands:instagram" size={32} class="inline-block" /> Instagram
          </span>
          <span>
            <Icon name="fa7-brands:youtube" size={32} class="inline-block" /> Youtube
          </span>
          <span>
            <Icon
              name="fa7-brands:github"
              size={32}
              class="inline-block"
            /> Github</span
          >
          <span>
            <Icon
              name="fa7-brands:x-twitter"
              size={32}
              class="inline-block"
            /> (formerly Twitter)</span
          >
          <span>
            <Icon
              name="fa7-brands:linkedin-in"
              size={32}
              class="inline-block"
            /> LinkedIn</span
          >
        </div>
      </div>
    </div>
  </section>
</Layout>
